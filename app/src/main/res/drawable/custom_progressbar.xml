<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#2323d9"
                android:centerColor="#367cda"
                android:centerY="1.0"
                android:endColor="#7dabf5"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#06df06"
                    android:centerColor="#06df06"
                    android:centerY="1.0"
                    android:endColor="#5398f1"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>